<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>com.example.eco_mobility.Control.LoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/LoginControl</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UtentiControl</servlet-name>
        <servlet-class>com.example.eco_mobility.Control.UtentiControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtentiControl</servlet-name>
        <url-pattern>/UtentiControl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutControl</servlet-name>
        <servlet-class>com.example.eco_mobility.Control.LogoutControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutControl</servlet-name>
        <url-pattern>/LogoutControl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SpostamentiControl</servlet-name>
        <servlet-class>com.example.eco_mobility.Control.SpostamentiControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpostamentiControl</servlet-name>
        <url-pattern>/SpostamentiControl</url-pattern>
    </servlet-mapping>
    
</web-app>